<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.truediplomat.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayout"
        android:paddingTop="5dip"
        android:background="@layout/gradient"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:layout_marginTop="10dip"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/backButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_light"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                android:layout_marginBottom="15dip"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="53dp"
                android:text="My Wwalks"
                android:textColor="@color/opaced_white"
                android:textSize="23sp" />


        </RelativeLayout>



    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainLayout"
        android:layout_margin="20dip">


        <RelativeLayout
            android:id="@+id/prefLanguageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true">


            <RelativeLayout
                android:id="@+id/prefLanguageTextLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/prefLangTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Preferred Base Language"
                    android:layout_marginTop="15dip"
                    android:textColor="#242424"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/carrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrier charges may apply"
                    android:layout_marginTop="5dip"
                    android:textColor="#525f6f"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/prefLangTitle"/>





            </RelativeLayout>


            <ImageView
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:padding="20dip"
                android:src="@mipmap/edit" />



        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#525f6f"
            android:layout_below="@+id/prefLanguageLayout"
            android:layout_marginTop="10dip"/>


        <RelativeLayout
            android:id="@+id/privacyPolicyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/view1">




                <TextView
                    android:id="@+id/privacyPolicyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:layout_marginTop="15dip"
                    android:textColor="#242424"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"/>



        </RelativeLayout>


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#525f6f"
            android:layout_below="@+id/privacyPolicyLayout"
            android:layout_marginTop="10dip"/>


        <RelativeLayout
            android:id="@+id/ratingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/view2">




            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating &amp; Review"
                android:layout_marginTop="15dip"
                android:textColor="#242424"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"/>
<!--
            <TextView
                android:id="@+id/ratingCarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dip"
                android:textColor="#525f6f"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ratingText"/>

                -->



        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#525f6f"
            android:layout_below="@+id/ratingLayout"
            android:layout_marginTop="10dip"/>


        <RelativeLayout
            android:id="@+id/shareLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/view3">




            <TextView
                android:id="@+id/shareText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_marginTop="15dip"
                android:textColor="#242424"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/shareCarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share with friends"
                android:layout_marginTop="5dip"
                android:textColor="#525f6f"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/shareText"/>



        </RelativeLayout>


        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#525f6f"
            android:layout_below="@+id/shareLayout"
            android:layout_marginTop="10dip"/>


        <RelativeLayout
            android:id="@+id/emailLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/view4">




            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send E-Mail"
                android:layout_marginTop="15dip"
                android:textColor="#242424"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/emailCarrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share your concerns via email"
                android:layout_marginTop="5dip"
                android:textColor="#525f6f"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/emailText"/>



        </RelativeLayout>







    </RelativeLayout>







</RelativeLayout>