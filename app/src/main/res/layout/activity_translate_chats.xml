<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/tester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:id="@+id/leftPart1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dip"
                    android:layout_alignParentLeft="true">




                    <TextView
                        android:id="@+id/fromText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dip"
                        android:gravity="center"
                        android:layout_marginTop="10dip"
                        android:textColor="@color/greyish"
                        android:text="From"
                        android:textStyle="normal" />




                    <RelativeLayout
                        android:id="@+id/leftPartDown1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/fromText1" >


                        <TextView
                            android:id="@+id/fromValue1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="5dip"
                            android:textColor="#000000"
                            android:text="English"
                            android:textStyle="normal" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/fromValue1"
                            android:src="@mipmap/downarrow" />



                    </RelativeLayout>



                </RelativeLayout>



            </LinearLayout>


            <ImageView
                android:id="@+id/newChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dip"
                android:visibility="gone"
                android:src="@mipmap/swap" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:id="@+id/rightPart1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tester"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip">



                    <TextView
                        android:id="@+id/toText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:textColor="@color/greyish"
                        android:text="To"
                        android:textStyle="normal" />

                    <RelativeLayout
                        android:id="@+id/rightPartDown1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/toText1">


                        <TextView
                            android:id="@+id/toValue1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="5dip"
                            android:layout_marginTop="10dip"
                            android:textColor="#000000"
                            android:text="Tamil"
                            android:textStyle="normal" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/toValue1"
                            android:src="@mipmap/downarrow" />



                    </RelativeLayout>



                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>






    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/centerTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/convosImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>



    <ListView
        android:id="@+id/conversationList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="20dip"
        android:layout_below="@+id/topBar"
        android:divider="@color/transparent"
        android:dividerHeight="0dip"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:layout_above="@+id/bottomBar"></ListView>



    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:id="@+id/testerBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/language1Layout"
                    android:layout_gravity="center">



                    <RelativeLayout
                        android:id="@+id/lang1Layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/redbutton">

                        <ImageButton
                            android:id="@+id/btnLanguage1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/mic" />

                    </RelativeLayout>



                    <TextView
                        android:id="@+id/language1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Speak"
                        android:singleLine="true"
                        android:layout_below="@+id/lang1Layout"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/greyish"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                </RelativeLayout>


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/language2Layout"
                android:layout_gravity="center">


                <RelativeLayout
                    android:id="@+id/lang2Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/greenbutton">

                    <ImageButton
                        android:id="@+id/btnLanguage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/mic" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/language2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Listen"
                    android:layout_below="@+id/lang2Layout"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/greyish"
                    android:textSize="15dp"
                    android:textStyle="normal" />

            </RelativeLayout>


        </LinearLayout>


        </LinearLayout>

       </RelativeLayout>




</RelativeLayout>
